<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>FlywayAirLines</display-name>
	<servlet>
		<servlet-name>routecontroller</servlet-name>
		<servlet-class>com.airlinebooking.flyaway.controller.RouteController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>routecontroller</servlet-name>
		<url-pattern>/addroute</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>flightcontroller</servlet-name>
		<servlet-class>com.airlinebooking.flyaway.controller.FlightController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>flightcontroller</servlet-name>
		<url-pattern>/addflight</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>searchcontroller</servlet-name>
		<servlet-class>com.airlinebooking.flyaway.controller.SearchController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>searchcontroller</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>bookflightcontroller</servlet-name>
		<servlet-class>com.airlinebooking.flyaway.controller.BookFlightController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>bookflightcontroller</servlet-name>
		<url-pattern>/bookflight</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>paymentcontroller</servlet-name>
		<servlet-class>com.airlinebooking.flyaway.controller.PaymentController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>paymentcontroller</servlet-name>
		<url-pattern>/payment</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logincontroller</servlet-name>
		<servlet-class>com.airlinebooking.flyaway.controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>logincontroller</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>passwordupdatecontroller</servlet-name>
		<servlet-class>com.airlinebooking.flyaway.controller.UpdatePasswordController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>passwordupdatecontroller</servlet-name>
		<url-pattern>/updatepassword</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>admin.jsp</welcome-file>

	</welcome-file-list>

</web-app>